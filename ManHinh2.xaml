<Window x:Class="KETNOI_EF.ManHinh2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KETNOI_EF"
        mc:Ignorable="d"
        Title="ManHinh2" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <DataGrid Margin="94,48,94,120"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  AlternatingRowBackground="LightPink"
                  Name="dgKhoa">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ma Khoa" Binding="{Binding Makhoa}"></DataGridTextColumn>
                <DataGridTextColumn Header="Ten Khoa" Binding="{Binding Tenkhoa}"></DataGridTextColumn>
                <DataGridTextColumn Header="Tong Vien Phi" Binding="{Binding Tong}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
